<% include  ./partials/header.ejs %>
<div calss="profile w-full min-h-screen bg-zinc-400 text-white pt-1">
    <form   id="uploadform" hidden   action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image"/>
    </form>

<div class="profdets flex flex-col items-center  mt-10">
    <div class="relative">
        <span id="uploadicon"  class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center  bg-zinc-200 ">
        <i class=" text-zinc-800  ri-pencil-fill"></i>

        </span>
 <div class="w-32 h-32 bg-zinc-200  rounded-full  overflow-hidden">
        <img src= "/images/uplods/<%=user.profileImage%>" class="'w-full h-full object-cover"  alt="" />
    </div> 
    </div>
    <h1 class="text-xl font-semibold"><%=user.name%></h1>
    <h3 class="text-md">@<%= user.username%></h3>
    <a href="/add" class="px-5 py-1 rounded-lg bg-red-700 mt-5">Add New Post</a>

</div>
<div class=" cards flex flex-wrap gap-10 px-10 mt-10">
    <div>
        <div class="w-32 h-32 bg-zinc-200 rounded-lg overflow-hidden" >
            <img   class="'w-full h-full object-cover"   src="/images/uplods/<%=user?.posts[0]?.image%>" alt="" />
        </div>
        <a href="/show/posts/" class="inline-block font-semibold mt-3">your uploaded Pins</a>
        <h5 class="text-sm font-medium opacity-80"><%= user.posts.length %> Pins</h5>
    </div>
  
   
</div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click", function () {
        document.querySelector('#uploadform input ').click();
    })
    document.querySelector('#uploadform').addEventListener("change",function(){
        document.querySelector('#uploadform').submit();
    }) ;
        
</script>
<% include  ./partials/footer.ejs %>
 