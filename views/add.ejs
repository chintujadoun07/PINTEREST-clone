<% include  ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-200 px-5 py-2 " >
    <h4 class=" text-xl font-bold">Create a new post</h4>
    <hr class="opacity-10 mt-10" />
    <!-- Form -->
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input type="file" class="block w-1/3 px-3 py-" name="postimage" id="">
        <input type="text" class="block w-1/3 px-3 py-2 border-2 rounded-md" name="title" id="" placeholder="Title">
        <textarea class="block w-1/3 h-40 px-3 py-2 border-2 rounded-md" name="description" id="description" placeholder="Description"></textarea>
        <input type="submit" class="block w-1/3 px-3 py-2 border-2 rounded-md bg-red-600" value="Create Post">
    </form>
    
</div>        

